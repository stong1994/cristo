baseURL = "https://stong1994.github.io/"
title = "cristo"

theme = "hugo-coder"

languageCode = "zh"
defaultContentLanguage = "zh"

paginate = 20

pygmentsStyle = "b2"
pygmentsCodeFences = true
pygmentsCodeFencesGuessSyntax = true

#[build]
#  noJSConfigInAssets = false
#  useResourceCacheWhen = "never"
#  writeStats = false
[permalinks]
  posts = "/:year/:month/:title/"

[params]
    #author = "北人"
    #description = "一个简单的个人博客"
    #keywords = "blog,developer,personal"
    info = "无名之辈"
    #avatarURL = "https://raw.githubusercontent.com/stong1994/images/master/picgo/mine.jpg"
    avatarURL = "images/mine.jpg"
    #gravatar = "john.doe@example.com"
    footerContent = "夭寿不贰，修身以俟"

    dateFormat = "January 2, 2006"

    hideFooter = false
    hideCredits = false
    hideCopyright = false
    since = 2021

    # Git Commit in Footer, uncomment the line below to enable it.
    # commit = "https://github.com/stong1994/stong1994.github.io/issues"

    #rtl = false

    # Specify light/dark colorscheme
    # Supported values:
    # "auto" (use preference set by browser)
    # "dark" (dark background, light foreground)
    # "light" (light background, dark foreground) (default)
    colorScheme = "auto"

    # Hide the toggle button, along with the associated vertical divider
    hideColorSchemeToggle = false

    # Series see also post count
    maxSeeAlsoItems = 5

    # Enable Twemoji
    enableTwemoji = true

    # Custom CSS
    customCSS = []

    # Custom SCSS
    customSCSS = []

    # Custom JS
    customJS = []


[taxonomies]
  category = "category"
  series = "series"
  tag = "tag"
  author = "authors"

